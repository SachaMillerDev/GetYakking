<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="GetYakking.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:GetYakking"
    Shell.FlyoutBehavior="Disabled">

    <ShellContent
        Title="Home"
        ContentTemplate="{DataTemplate local:MainPage}"
        Route="MainPage" />

    <!-- Added lines -->
    <ShellContent
        Title="Original"
        ContentTemplate="{DataTemplate local:OriginalGamePage}"
        Route="OriginalGamePage" />
    <ShellContent
        Title="Couples"
        ContentTemplate="{DataTemplate local:CouplesGamePage}"
        Route="CouplesGamePage" />
    <ShellContent
        Title="Risky"
        ContentTemplate="{DataTemplate local:RiskyGamePage}"
        Route="RiskyGamePage" />
</Shell>
